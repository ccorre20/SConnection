<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_red_dark"
    tools:context="co.edu.eafit.pi1.sconnection.Register">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_rect"
        android:padding="10dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/register_username"
                android:id="@+id/register_name_title"
                android:textColor="@android:color/white"
                android:textColorHint="#7cffffff"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal" />

             <View android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#17000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/username_text"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:textColorHint="#7cffffff"
                android:background="@null"
                android:hint="@string/register_username_edittext" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_rect"
            android:padding="10dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/register_password"
                android:id="@+id/register_password_title"
                android:textColor="@android:color/white"
                android:textColorHint="#7cffffff"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal" />

            <View android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#17000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_edittext"
                android:layout_marginTop="15dp"
                android:textColor="@android:color/white"
                android:textColorHint="#7cffffff"
                android:background="@null"
                android:hint="clave" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/round_rect"
            android:padding="10dp"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_marginBottom="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/register_user_t"
                android:id="@+id/textView3"
                android:textColor="@android:color/white"
                android:textColorHint="#7cffffff"
                android:layout_marginTop="15dp"
                android:layout_gravity="center_horizontal"/>

            <View android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="#17000000"/>

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:id="@+id/radioGroup"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="0dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_radio_user"
                    android:id="@+id/radioButton"
                    android:checked="true"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:layout_margin="10dp" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_radio_provider"
                    android:id="@+id/radioButton2"
                    android:checked="false"
                    android:textColor="@android:color/white"
                    android:buttonTint="@android:color/white"
                    android:layout_margin="10dp" />

                </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/register_button"
                android:id="@+id/register_button"
                android:onClick="doRegisterClick"
                android:background="@color/reddark"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
