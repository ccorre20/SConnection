<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@android:color/holo_red_dark"
    tools:context="co.edu.eafit.pi1.sconnection.ProviderRegister">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/full_name_provider_register_layout"
        android:orientation="vertical"
        android:background="@drawable/round_rect"
        android:padding="10dp"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/white"
            android:textColorHint="#7cffffff"
            android:text="@string/nombre_completo"
            android:id="@+id/completeNameTextView"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentStart="true" />

        <View android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#17000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/complete_name_edit_text"
            android:hint="@string/name_and_lastname"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textColorHint="#7cffffff"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/completeNameTextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/description_provider_register_layout"
        android:orientation="vertical"
        android:background="@drawable/round_rect"
        android:padding="10dp"
        android:layout_below="@+id/full_name_provider_register_layout"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/description"
            android:textColor="@android:color/white"
            android:textColorHint="#7cffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/descriptionTextView"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp" />

        <View android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#17000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/description_edit_text"
            android:hint="@string/description_details"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textColorHint="#7cffffff"
            android:background="@null" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/round_rect"
        android:padding="10dp"
        android:layout_below="@+id/description_provider_register_layout"
        android:layout_marginLeft="0.5dp"
        android:layout_marginRight="0.5dp"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/availability_time_schedule"
            android:textColor="@android:color/white"
            android:textColorHint="#7cffffff"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView6"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true" />

        <View android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#17000000"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/schedule_edit_text"
            android:hint="@string/schedule_text"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:textColor="@android:color/white"
            android:textColorHint="#7cffffff"
            android:background="@null"
            android:layout_alignStart="@+id/description_edit_text" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/register_button"
            android:textColor="@android:color/white"
            android:background="@color/reddark"
            android:id="@+id/provider_register_button"
            android:onClick="doRegisterClick"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </LinearLayout>

</RelativeLayout>
